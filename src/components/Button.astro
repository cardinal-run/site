---
interface Props {
    href: string;
    target?: string;
}

const {  href, target } = Astro.props;
---

<a class="button" href={href} target={target}>
    <slot />
</a>

<style>
    .button {
        text-align: center;
        display: inline;
        background-color: rgb(var(--accent-light)) !important;
        border-color: rgb(var(--accent-light));
        border-style: solid;
        border-width: 1px;
        border-radius: 4px;
        box-shadow: none;
        color: #ffffff ;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        margin: 0;
        padding: 1rem;
        height: auto;
        text-decoration: none;
    }
    .button:hover {
        background-color: rgb(var(--accent)) !important;
        border-color: rgb(var(--accent)) !important;
    }
</style>