---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Subscribe from '../components/Subscribe.astro';
---

<Layout title="Presenting Cardinality.">
	<main>
		<div class="header-wrapper">
			<div class="header">
				<img class="logo" src="logo.svg"></img>
				<p class="presenting">PRESENTING CARDINALITY</p>
				<h1>Start observing your Flutter apps</h1>
				<p class="tagline">Subscribe to our newsletter to receive product updates and announcements</p>
				<Subscribe></Subscribe>
				<p class="trusted">Trusted by no-one (yet)</p>
			</div>
		</div>
	</main>
	<footer>
		<div class="footer-content">
			<div class="left">
				© Cardinality • All Rights Reserved
			</div>
			<div class="right">
				<div class="social">				
					<a href="https://x.com/cardinality_run"><img src="social-x.svg"></img></a>
				</div>
				<div class="social">
					<a href="https://discord.gg/Abkm7Ewhen"><img src="social-discord.svg"></img></a>
				</div>
				<div class="social">
					<a href="https://www.linkedin.com/company/cardinality_run/"><img src="social-linkedin.svg"></img></a>
				</div>
			</div>
		</div>
	</footer>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 800px;
		max-width: calc(100% - 4rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	footer {
		background-color: #0a0a0a;
		color: white;
		font-size: 18px;
		line-height: 1.6;
	}
	.footer-content {
		margin: auto;
		padding: 2rem 1rem;
		width: 800px;
		max-width: calc(100% - 4rem);
		display: flex;
		flex-direction: row;
		align-items: center;
	}
	footer .left {
		flex: 1;
		display: inline-block;
		vertical-align: middle;
	}
	footer .right {
		flex: 1;
		justify-content: end;
		display: flex;
	}
	.social {
		display: inline-block;
		width: 1.5rem;
		height: 1.5rem;
		padding: 1rem;
		margin-left: 1rem;
	}
	.social img {
		max-width: 100%;
	}
	.header-wrapper {
		width: 100%;
		height: 100vh;
		text-align: center;
		display:block;
	}
	.header {
		height: 100vh;
		display: table-cell;
    	vertical-align: middle;   
	}

	a {
		color: rgb(217, 217, 217);
		text-decoration: none;
	}
	a:hover {
		color: white;
	}
	.logo {
		width: 8rem;
		display: block;
		margin-left: auto;
		margin-right: auto;
		margin-top: -2em;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-top: 0em;
		margin-bottom: 0em;
	}
	p.presenting {
		font-size: 1rem;
		line-height: 1.5;
		text-align: center;
		margin-bottom: 1em;
		letter-spacing: 0.5rem;
	}
	p.tagline {
		margin-top: 2rem;
		font-size: 1.5rem;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;

	}
	p.trusted {
		margin-top: 0.75rem;
		font-size: 1rem;
		line-height: 1;
		text-align: center;
		margin-bottom: 2em;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
