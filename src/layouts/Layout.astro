<style is:global>
	@font-face {
		font-family: 'WorkSans';
		src: url('/fonts/WorkSans-VariableFont_wght.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	:root {
		--accent: 245, 53, 30;
		--accent-light: 250, 71, 51;
		--accent-dark: 221 48 27;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			rgb(var(--background-content-dark)) 60%
		);
	}

	html, body {
		font-family: 'WorkSans', sans-serif;
		padding: 0;
		margin: 0;
	}
	html {
		background: linear-gradient(to bottom right, #c8e6c5 0%, #d1e4ca 50%, #b5e3e7 100%),
        			linear-gradient(rgba(0, 0, 0, 1), rgba(0, 0, 0, 1));
		color: #000;
		--background-content: 248, 242, 229;
		--background-content-dark: 231 224 211;
		--foreground-content: 0, 0, 0;
	}
	html.dark {
		background: #000;
		color: #fff;
		--background-content: 10, 10, 10;
		--background-content-dark: 0 0 0;
		--foreground-content: 255, 255, 255;
	}

	h1, h2, h3, h4, h5, h6, p, blockquote {
		margin: 0 0 1.5rem;
	}

	a {
		color: rgb(var(--accent)); 
	}

	blockquote {
		border-left: rgb(var(--accent)) 0.25rem solid;
		padding: 0.1rem 0.75rem;
	}
</style>
